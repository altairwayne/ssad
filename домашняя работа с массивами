<?php
$a=rand(0,200000);
function div_int($a)
{
    $arr=[];
    for($i=1; $i<=$a; $i++){
        if($a%$i==0){
            array_push($arr, $i);
        }
    }
    echo $a . '<br>';
    
    return $arr;
    
}
echo '<pre>';  
print_r(div_int($a));
