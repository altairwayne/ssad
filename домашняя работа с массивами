for($i=0; $i<10; $i++){
    $new_mas[$mas[$i]]=div_int($mas[$i]);
}


echo '<pre>';
print_r($new_mas);
echo '</pre>';


function div_int($a)
{
    $arr=[];
    for($i=1; $i<=$a; $i++){
        if($a%$i==0){
            array_push($arr, $i);
        }
    }
    
    return $arr;
    
}
